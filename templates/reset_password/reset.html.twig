{% extends 'base.html.twig' %}

{% block title %}Réinitialisez votre mot de passe{% endblock %}

{% block content %}
    <div class="max-w-md mx-auto mt-10 p-6 bg-white rounded-lg shadow-md">
        <h1 class="text-2xl font-bold mb-6 text-center">Réinitialisez votre mot de passe</h1>
        {{ form_start(resetForm) }}
            <div class="mb-4">
                {{ form_row(resetForm.plainPassword, {'attr': {'class': 'w-full px-3 py-2 border border-gray-300 rounded-md'}}) }}
            </div>
            <div class="text-center">
                <button class="btn btn-primary bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">Réinitialiser le mot de passe</button>
            </div>
        {{ form_end(resetForm) }}
    </div>
    {% block right_menu %}
{% endblock %}
{% endblock %}
