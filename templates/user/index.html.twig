{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block content %}
    <h1 class="text-2xl font-bold mb-6 text-center">User index</h1>

    <div class="overflow-x-auto">
        <table class="w-full bg-white border border-gray-300 table-fixed">
            <thead>
                <tr>
                    <th class="px-4 py-2 border-b">Id</th>
                    <th class="px-4 py-2 border-b">Username</th>
                    <th class="px-4 py-2 border-b">Email</th>
                    <th class="px-4 py-2 border-b">Password</th>
                    <th class="px-4 py-2 border-b">AccountStatus</th>
                    <th class="px-4 py-2 border-b">ProfilePicture</th>
                    <th class="px-4 py-2 border-b">Roles</th>
                    <th class="px-4 py-2 border-b">Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for user in users %}
                <tr>
                    <td class="px-4 py-2 border-b">{{ user.id }}</td>
                    <td class="px-4 py-2 border-b">{{ user.username }}</td>
                    <td class="px-4 py-2 border-b break-words">{{ user.email }}</td>
                    <td class="px-4 py-2 border-b">{{ user.password|u.truncate(8) }}</td>
                    <td class="px-4 py-2 border-b">{{ user.accountStatus.name }}</td>
                    <td class="px-4 py-2 border-b">{{ user.profilePicture|u.truncate(8) }}</td>
                    <td class="px-4 py-2 border-b break-words">{{ user.roles ? user.roles|json_encode : '' }}</td>
                    <td class="px-4 py-2 border-b">
                        <a href="{{ path('app_user_show', {'id': user.id}) }}" class="text-blue-500 hover:underline">Show</a>
                        <a href="{{ path('app_user_edit', {'id': user.id}) }}" class="text-blue-500 hover:underline">Edit</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="8" class="px-4 py-2 text-center">No records found</td>
                </tr>
            </tbody>
            {% endfor %}
        </table>
    </div>

    <div class="mt-4 text-center">
        <a href="{{ path('app_user_new') }}" class="btn btn-primary bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">Create new</a>
    </div>
    {% block right_menu %}{% endblock %}
{% endblock %}
